<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UCRS" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="GreenSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
        <item name="colorAccent">@color/uc_green</item>
    </style>

    <style name="RoundedAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerRadius</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerRadius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="BottomNavTextInactiveFinal" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="BottomNavTextActiveFinal" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="NavigationDrawerTextStyle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/uc_green</item>
    </style>

    <style name="NavigationItemCenteredText" parent="@style/TextAppearance.AppCompat.Body2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_light</item>
    </style>

    <style name="Theme.UCRS.NoTitleDialog" parent="Theme.MaterialComponents.Light.Dialog.Bridge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SubmenuTitle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="DashboardButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>