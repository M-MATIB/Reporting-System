<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".StudentProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/olive_green">

        <View
            android:id="@+id/v_header_background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu_icon"
            app:tint="@color/uc_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:contentDescription="UCRS Logo"
            android:src="@drawable/uc_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/v_header_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/btn_back_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingEnd="16dp"
                        android:paddingStart="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" >
                        <ImageView
                            android:id="@+id/iv_back_icon"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/right_icon"
                            android:contentDescription="Back Icon"
                            android:rotation="180"
                            app:tint="@color/black" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="Back"
                            android:textColor="@color/black"
                            android:fontFamily="@font/montserrat_medium"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_virtual_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/uc_green" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/pale_yellow">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingStart="0dp"
                                android:paddingEnd="0dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="16dp"
                                android:background="@color/uc_green"
                                android:gravity="top|center_horizontal">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/uc_logo"
                                    android:contentDescription="UC Logo" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/iv_profile_picture"
                                    android:layout_width="75dp"
                                    android:layout_height="75dp"
                                    android:src="@drawable/user_avatar_icon"
                                    android:contentDescription="Profile Picture Placeholder"
                                    app:tint="@color/uc_green"
                                    android:layout_marginBottom="8dp"/>

                                <TextView
                                    android:id="@+id/tv_student_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="0dp"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:text="JOSE RIZAL"
                                    android:textColor="@color/uc_green"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/tv_student_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22-2222-222"
                                    android:textColor="@color/uc_green"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:layout_marginBottom="10dp"/>

                                <TextView
                                    android:id="@+id/tv_student_course"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="BS Computer Science"
                                    android:textColor="@color/uc_green"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:layout_marginBottom="5dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/pale_yellow"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/dark_yellow" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_edit_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/email_icon"
                                    android:contentDescription="Email Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_user_email"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:text="joserizal0@gmail.com"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:gravity="end" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_icon"
                                    android:contentDescription="Edit"
                                    app:tint="@color/black"
                                    android:layout_marginStart="5dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/dark_yellow"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:id="@+id/ll_edit_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/phone_icon"
                                    android:contentDescription="Phone Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_user_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:text="09123456789"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:gravity="end" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_icon"
                                    android:contentDescription="Edit"
                                    app:tint="@color/black"
                                    android:layout_marginStart="5dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/dark_yellow"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:id="@+id/ll_edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/home_icon"
                                    android:contentDescription="Address Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_user_address"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:text="Baguio City"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:gravity="end" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_icon"
                                    android:contentDescription="Edit"
                                    app:tint="@color/black"
                                    android:layout_marginStart="5dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/dark_yellow"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:id="@+id/ll_edit_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/lock_icon"
                                    android:contentDescription="Password Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Password"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_user_password"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="8dp"
                                    android:text="********"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:gravity="end" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_icon"
                                    android:contentDescription="Edit"
                                    app:tint="@color/black"
                                    android:layout_marginStart="5dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preferences"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/pale_yellow"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/dark_yellow">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_notification"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="24dp"
                                android:gravity="center_vertical"
                                android:clickable="false"
                                android:focusable="false"
                                android:background="@null">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/notification_icon"
                                    android:contentDescription="Notification Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Notification"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:checked="true"
                                    android:thumbTint="@color/switch_thumb_selector"
                                    app:trackTint="@color/switch_track_selector" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/dark_yellow"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:id="@+id/ll_delete_history"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/report_history_icon"
                                    android:contentDescription="Delete History Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Delete History"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_icon"
                                    android:contentDescription="Go"
                                    app:tint="@color/black" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date &amp; Time Format"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/pale_yellow"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/dark_yellow"
                        android:layout_marginBottom="32dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_date_format"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="16dp"
                                android:gravity="center_vertical"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/date_icon"
                                    android:contentDescription="Date Format Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Date"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_date_format_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="MM/DD/YYYY"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/right_icon"
                                    android:contentDescription="Change Date Format"
                                    app:tint="@color/black"
                                    android:layout_marginStart="5dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/dark_yellow"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"/>

                            <LinearLayout
                                android:id="@+id/ll_time_format"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:paddingEnd="24dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/time_icon"
                                    android:contentDescription="Time Format Icon"
                                    app:tint="@color/uc_green"
                                    android:layout_marginEnd="5dp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Time"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="4dp"
                                    android:text="12-hour"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/switch_time_format"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:checked="true"
                                    android:thumbTint="@color/switch_thumb_selector"
                                    app:trackTint="@color/switch_track_selector" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/pale_yellow"
        app:headerLayout="@layout/nav_header_student"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/uc_green"
        app:itemTextColor="@color/uc_green"
        app:itemIconPadding="24dp"
        app:itemTextAppearance="@style/NavigationDrawerTextStyle"/>

</androidx.drawerlayout.widget.DrawerLayout>