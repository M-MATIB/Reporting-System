<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".StaffHomepage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/olive_green">

        <View
            android:id="@+id/v_header_background"
            android:layout_width="0dp"
            android:layout_height="105dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu_icon"
            app:tint="@color/uc_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:contentDescription="UC Logo"
            android:src="@drawable/uc_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/TopCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_header_background">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="9dp"
                android:paddingBottom="9dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wazzup!!!"
                    android:fontFamily="@font/montserrat_light"
                    android:textColor="@color/uc_green"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_staff_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jose Rizal"
                    android:fontFamily="@font/montserrat_black"
                    android:textColor="@color/uc_green"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/TopCardView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_NewReports"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:backgroundTint="#E0E0E0"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="@string/new_reports"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toTopOf="@id/btn_Pending"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_Pending"
                    style="@style/DashboardButton"
                    android:layout_marginTop="50dp"
                    android:backgroundTint="@color/pending_bg"
                    android:text="@string/pending"
                    app:layout_constraintBottom_toTopOf="@id/btn_InProgress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_NewReports" />

                <Button
                    android:id="@+id/btn_InProgress"
                    style="@style/DashboardButton"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/in_progress_bg"
                    android:text="@string/in_progress"
                    app:layout_constraintBottom_toTopOf="@id/btn_Resolved"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_Pending" />

                <Button
                    android:id="@+id/btn_Resolved"
                    style="@style/DashboardButton"
                    android:layout_marginTop="15dp"
                    android:backgroundTint="@color/resolved_bg"
                    android:text="Resolved"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btn_InProgress" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="20dp"
        android:fitsSystemWindows="true"
        android:background="@color/pale_yellow"
        android:theme="@style/SubmenuTitle"
        app:headerLayout="@layout/nav_header_student"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/uc_green"
        app:itemTextColor="@color/uc_green"
        app:itemIconPadding="24dp"
        app:itemTextAppearance="@style/NavigationDrawerTextStyle"/>
</androidx.drawerlayout.widget.DrawerLayout>
