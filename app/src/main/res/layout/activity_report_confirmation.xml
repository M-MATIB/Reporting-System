<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".ReportConfirmationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/olive_green">

        <View
            android:id="@+id/v_header_background"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu_icon"
            app:tint="@color/uc_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:contentDescription="UCRS Logo"
            app:srcCompat="@drawable/uc_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/v_header_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_success_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:background="@drawable/rounded_edittext"
                        android:gravity="center_horizontal" >

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:srcCompat="@drawable/check_circle_icon"
                            app:tint="@color/bright_green"
                            android:contentDescription="Success Checkmark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Report Filed\nSuccessfully!"
                            android:textColor="@color/black"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:id="@+id/tv_success_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:text="@string/success_message"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_report_details_outer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/pale_yellow">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="10dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:background="@drawable/rounded_yellow">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Report ID:"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:textColor="@color/uc_green"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_report_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RPT-12345"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textColor="@color/uc_green"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report Details"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/uc_green"
                            android:textSize="18sp"
                            app:drawableStartCompat="@drawable/document_icon"
                            android:drawablePadding="8dp"
                            android:layout_marginBottom="0dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Report\nType"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv_report_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Missing/Broken\nItem"
                                android:textAlignment="textEnd"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title/Summary"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/tv_title_summary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Title of the report"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/rounded_input_yellow"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Location/\nArea"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv_location_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Room #"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description of the issue:"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/tv_description_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description of the report"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:padding="12dp"
                            android:minLines="3"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/rounded_input_yellow"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attached Image/File"
                            android:fontFamily="@font/montserrat_bold"
                            android:textStyle="bold"
                            android:textColor="@color/uc_green"
                            app:drawableStartCompat="@drawable/file_image_icon"
                            android:drawablePadding="8dp"
                            android:layout_marginBottom="5dp"/>

                        <LinearLayout
                            android:id="@+id/ll_attachment_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:background="@android:color/transparent">

                        </LinearLayout>

                        <View
                            android:id="@+id/v_attachment_separator"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Target Office"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/tv_target_office"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Target Office"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:padding="12dp"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/rounded_input_yellow"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Submitted\nBy"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv_submitted_by"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jose Rizal"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:background="@color/light_grey" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Submitted\nOn"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/black"
                                android:textSize="15sp" />
                            <TextView
                                android:id="@+id/tv_submitted_on_datetime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10/01/2025\n8:15:14 pm"
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:gravity="end" />
                        </LinearLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_marginBottom="10dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_back_to_homepage"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_gravity="center_horizontal"
                                android:text="Back to Homepage"
                                android:fontFamily="@font/montserrat_medium"
                                android:paddingStart="40dp"
                                android:paddingEnd="40dp"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                app:backgroundTint="@color/forest_green"
                                app:cornerRadius="8dp" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="210dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/pale_yellow"
        app:headerLayout="@layout/nav_header_student"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/uc_green"
        app:itemTextColor="@color/uc_green"
        app:itemIconPadding="24dp"
        app:itemTextAppearance="@style/NavigationDrawerTextStyle"/>

</androidx.drawerlayout.widget.DrawerLayout>