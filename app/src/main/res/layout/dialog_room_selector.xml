<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/dialog_rounded_bg"> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Location/Area"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@color/uc_green"
    android:fontFamily="@font/montserrat_medium"
    android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_search_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search room..."
        android:drawableStart="@drawable/search_icon"
        android:drawableTint="@color/uc_green"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext_green_border"
        android:textColorHint="@color/uc_green"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_room_list"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="vertical"
        android:nestedScrollingEnabled="true"/>
</LinearLayout>