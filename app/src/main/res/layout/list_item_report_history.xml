<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@null">  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report ID"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_report_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="RPT-12345"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_status_tag"
        android:layout_width="wrap_content"
        android:minWidth="120dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@null" tools:background="@drawable/status_pending_bg" >

        <ImageView
            android:id="@+id/iv_status_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp" android:src="@null" app:tint="@color/black" tools:src="@drawable/pending_icon"
            tools:tint="@color/pending" />
        <TextView
            android:id="@+id/tv_report_status_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/montserrat_bold"
            tools:text="In Progress"
            android:textColor="@color/black" tools:textColor="@color/pending" />
    </LinearLayout>
</RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Type:"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_report_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            tools:text="Missing/Broken Item"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location:"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_report_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            tools:text="M301"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submitted:"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/tv_report_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            tools:text="10/01/2025, 8:15:14 PM"
            android:gravity="end"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/btn_view_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details â†’"
        android:textColor="@color/uc_green"
        android:textSize="15sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true"
        />
</LinearLayout>
</androidx.cardview.widget.CardView>