<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pale_yellow"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="32dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/user_avatar_icon"
        android:contentDescription="User Profile Icon"
        app:tint="@color/uc_green" />

    <TextView
        android:id="@+id/tv_nav_header_name"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Jose Rizal"
        android:fontFamily="@font/montserrat_black"
        android:textColor="@color/uc_green"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_nav_header_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22-2222-222"
        android:fontFamily="@font/montserrat_light"
        android:textColor="@color/uc_green"
        android:textSize="14sp" />

</LinearLayout>